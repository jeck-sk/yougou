.search {
  padding: 20rpx;
  background: #eee;
}

.search .search-input {
  background: #fff;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 16px;
}

.search-input icon {
  vertical-align: sub;
  margin-right: 20rpx;
}

.tab {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1px solid #eaeaea;
}

.tab_content {
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 2px solid #eaeaea;
}

.tab_left image {
  width: 200rpx;
  height: 200rpx;
}

.tab_right {
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.tab_right text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.tab_right view{
  color: red;
  font-size: 20px;
}
.tab .active{
  color: red;
}